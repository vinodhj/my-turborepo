{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --no-error-on-unmatched-pattern",
    "test": "turbo test --filter='./services/*'",
    "service": "bun create cloudflare@latest"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "@vitest/coverage-istanbul": "1.3.0",
    "turbo": "^2.0.3",
    "wrangler": "^3.44.0",
    "husky": "^9.0.11"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.26",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
